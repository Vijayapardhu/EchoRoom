rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Reports collection: Users can create reports, but only admins/server can read/update
    match /reports/{reportId} {
      allow create: if true; // Allow anyone to report for now (anonymous)
      allow read, update, delete: if false; // Only backend admin SDK can manage these
    }

    // Users collection: Public read for trust scores, but restricted writes
    match /users/{userId} {
      allow read: if true;
      allow write: if false; // Only backend updates trust scores
    }
  }
}
